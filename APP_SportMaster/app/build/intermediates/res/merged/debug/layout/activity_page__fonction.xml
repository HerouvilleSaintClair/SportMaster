<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="exemple.sportmaster_sax.Controlleur.Page_Fonction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenue"
        android:id="@+id/textView_fonction"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:width="300px"
        android:height="300px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vous avez sélectionné : "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carte"
        android:id="@+id/button_fonction_carte"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView_fonction"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:width="300px"
        android:height="90px"
        android:textColor="#E0FFFF"
        android:textSize="30px"
        android:layout_marginBottom="10px"
        android:onClick="toCarte"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyse"
        android:id="@+id/button_fonction_analyse"
        android:layout_below="@+id/button_fonction_carte"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:width="300px"
        android:height="90px"
        android:textColor="#E0FFFF"
        android:textSize="30px"
        android:layout_marginBottom="10px"
        android:onClick="toAnalyse"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagramme"
        android:id="@+id/button_fonction_diagramme"
        android:layout_below="@+id/button_fonction_analyse"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:width="300px"
        android:height="90px"
        android:textColor="#E0FFFF"
        android:textSize="30px"
        android:onClick="toDiagramme"/>
</RelativeLayout>
