<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="exemple.sportmaster_sax.Controlleur.Page_Analyse">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1       1053m     180s           6.5km/h                7.8km/h      1.2km/h         1.5m/s^2            100s"
        android:id="@+id/textView_analyse_donnee"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_below="@+id/afficher_analyse"
        android:layout_alignStart="@+id/afficher_analyse"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N°   Distance    Durée      MoyenneVitesse    MaxVitesse       MinVitesse     MaxAccélérée           ERCDT"
        android:id="@+id/afficher_analyse"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView_analyse_nom_trajet"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ERCDT :l’Effort Reste Constant Dans le Temps"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/afficher_analyse" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N°1 : trajet_1_50_ligne.gpx\nN°2 : trajet_2_50_ligne.gpx "
        android:id="@+id/textView_analyse_nom_trajet"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:scrollbars="vertical"
        android:singleLine="false"

        android:layout_above="@+id/afficher_analyse" />

</RelativeLayout>
